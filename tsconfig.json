{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "module": "es2022",
    "target": "es2021",
    "lib": ["es2021"],
    "strict": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "types": ["@types/node", "@cloudflare/workers-types", "@types/uuid", "@types/he"],
    "paths": {
      "@env/env": ["src/env.ts"],
      "@app/*": ["src/app/*"],
      "@anilist/*": ["src/anilist/*"],
      "@client/*": ["src/client/*"],
      "@graphql/*": ["src/graphql/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
