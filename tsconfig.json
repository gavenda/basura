{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["@cloudflare/workers-types", "@types/he"],
    "paths": {
      "@logger/logger": ["./src/logger.ts"],
      "@env/env": ["./src/env.ts"],
      "@studio-bogus/discord-interaction-app": ["./src/app/index.ts"],
      "@studio-bogus/discord-interaction-app/context": ["./src/app/context/index.ts"],
      "@studio-bogus/discord-interaction-client": ["./src/client/index.ts"],
      "@anilist/gql": ["./src/anilist/gql/index.ts"],
      "@anilist/*": ["./src/anilist/*"],
      "@graphql/*": ["./src/graphql/*"],
      "@util/*": ["./src/util/*"],
      "@db/*": ["./src/db/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
